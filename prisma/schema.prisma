// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Department {
  CE
  IT
  ENTC
  ECE
  AIDS
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique
  password    String
  name        String?
  department  Department
  year        Int
  passoutYear Int
  roll        Int
  hours       Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model AdminToken {
  id        String   @id @default(uuid())
  token     String   @unique
  adminId   String
  createdAt DateTime @default(now())
  expiresAt DateTime
} 